# Telegram API credentials - Get from https://my.telegram.org/apps
API_ID=your_api_id
API_HASH=your_api_hash

# Your Telegram phone number (with country code)
PHONE_NUMBER=+84xxxxxxxxx

# Target chat/group ID (negative for groups, or @username)
TARGET_CHAT_ID=-100xxxxxxxxx

# Admin user ID (can manage other users)
ADMIN_USER_ID=your_user_id

# Allowed user IDs (comma separated, optional)
ALLOWED_USERS_STR=user_id_1

# Download directory (optional)
DOWNLOAD_DIR=./downloads